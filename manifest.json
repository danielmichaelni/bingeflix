{
  "manifest_version": 2,

  "name": "Bingeflix",
  "version": "1.0.0",

  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_popup": "popup/popup.html"
  },

  "content_scripts": [
    {
      "matches": ["*://www.netflix.com/watch/*"],
      "js": ["auto_skip.js"]
    }
  ],

  "permissions": ["*://www.netflix.com/*", "storage", "tabs", "webNavigation"]
}
