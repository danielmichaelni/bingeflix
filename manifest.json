{
  "manifest_version": 3,
  "name": "Bingeflix - Netflix Companion",
  "version": "1.0.5",

  "description": "Take your Netflix binge to the next level",
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "action": {
    "default_popup": "popup/popup.html"
  },

  "content_scripts": [
    {
      "matches": ["*://*.netflix.com/*"],
      "js": ["binge.js"]
    }
  ],
  "permissions": ["storage"]
}
